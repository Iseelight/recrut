# Database
DATABASE_URL=postgresql://recruitai_user:recruitai_password@localhost:5432/recruitai_db

# JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API
API_V1_STR=/api/v1
PROJECT_NAME=RecruitAI API
VERSION=1.0.0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "https://localhost:5173"]

# Redis
REDIS_URL=redis://localhost:6379

# Email
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=RecruitAI

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
SPEECH_TO_TEXT_API_KEY=your-speech-to-text-api-key